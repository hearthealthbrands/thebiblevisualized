---
layout: layouts/base.njk
title: Collection
---

<!-- SEO: Hidden Heading for Search Engines -->
<h1 class="visually-hidden">The Bible Visualized: A Digital Scripture Gallery</h1>

<div class="gallery-grid">
  {% for post in collections.post | reverse %}
    <a href="{{ post.url }}" class="gallery-card">
      
      <div class="image-wrapper">
        <img 
          src="{{ post.data.image }}" 
          alt="{{ post.data.verse_ref }}" 
          loading="lazy"
          style="view-transition-name: img-{{ post.fileSlug }};"
        >
      </div>
      
      <div class="card-info">
        
        <span class="theme-tag">
          {{ post.data.tags[1] or "Scripture" }}
        </span>

        <h3>{{ post.data.verse_ref }}</h3> 

        <p class="verse-snippet">
          "{{ post.data.verse_text }}"
        </p>

        <span class="card-cta">Read Reflection &rarr;</span>
      
      </div>
    </a>
  {% endfor %}
</div>