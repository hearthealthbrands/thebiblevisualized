    <title>{{ title or "The Bible Visualized" }}</title>
    
    <!-- 1. SEO OPTIMIZATION: Standard Description & Canonical -->
    <meta name="description" content="{{ verse_text or 'Scripture visualized through modern digital artistry. A daily devotional project exploring the Bible one pixel at a time.' }}">
    <link rel="canonical" href="https://thebiblevisualized.com{{ page.url }}">

    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

    <!-- Pinterest Verification -->
    <meta name="p:domain_verify" content="43db8fc5b663a5af172b48a7ab53bab6"/>
    
    <meta name="view-transition" content="same-origin" />
    
    <!-- Social Media Tags (Open Graph) -->
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:description" content="{{ verse_text or 'Scripture visualized through modern digital artistry.' }}" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="https://thebiblevisualized.com{{ page.url }}" />
    <meta property="og:image" content="https://thebiblevisualized.com{{ image }}" />
    
    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@TheBibleViz">
    <meta name="twitter:image" content="https://thebiblevisualized.com{{ image }}">

    <link rel="stylesheet" href="/css/style.css">
</head>

{% set previousPost = collections.post | getPreviousCollectionItem(page) %}
{% set nextPost = collections.post | getNextCollectionItem(page) %}

