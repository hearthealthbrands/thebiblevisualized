                <a href="{{ previousPost.url }}" style="border-bottom: 1px solid var(--accent);">← Previous</a>
            {% endif %}
            
            {% if nextPost %}
                <a href="{{ nextPost.url }}" style="border-bottom: 1px solid var(--accent);">Next →</a>
            {% endif %}
